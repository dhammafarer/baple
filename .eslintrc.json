{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "overrides": [
        {
          "files": "*/**.js",
          "excludedFiles": ["*/**/.ts", "*/**/.tsx"],
          "rules": {
            "quotes": [ 2, "single" ]
          }
        }
      ]
}
